<h1>User Management</h1>
<table>
    <tr>
        <th>Username</th>
        <th>Status</th>
        <th>Messages</th>
        <th>Actions</th>
    </tr>
    <% users.forEach(u => { %>
        <tr>
            <td><%= u.username %></td>
            <td>
                <% if (u.isadmin) { %>Admin<% } 
                   else if (u.ismember) { %>Member<% }
                   else { %>User<% } %>
            </td>
            <td><%= u.message_count %></td>
            <td>
                <% if (!u.isadmin) { %>
                    <% if (u.ismember) { %>
                        <form method="POST" action="/admin/users/<%= u.id %>/demote">
                            <button>Demote</button>
                        </form>
                    <% } else { %>
                        <form method="POST" action="/admin/users/<%= u.id %>/promote">
                            <button>Promote to Member</button>
                        </form>
                    <% } %>
                <% } %>
            </td>
        </tr>
    <% }) %>
</table>
